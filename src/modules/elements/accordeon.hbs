---
parent-id: ''
list:
  'Entry 1': '#entry-1'
  'Entry 2': '#entry-2'
  'Entry 3':
    'Entry 1.1': '#entry-1-1'
    'Entry 1.2': '#entry-1-2'
    'Entry 1.3': '#entry-1-3'
  'Entry 4':
    'Entry 4.1': '#entry-4-1'
    'Entry 4.2': '#entry-4-2'
    'Entry 4.3':
      'Entry 4.3.1': '#entry-4-3-1'
      'Entry 4.3.2': '#entry-4-3-2'
      'Entry 4.3.3': '#entry-4-3-3'
---
<div class="module controller" data-module="gp-boilerplate-documentation/modules/elements/accordeon" data-controller="gp-boilerplate-documentation/modules/elements/accordeon" data-chunk="gp-boilerplate-documentation">

  <div>
    {{#if list.length}}
      {{#if url}}
        {{#mixin "gp-boilerplate-documentation/modules/elements/link" this class="accordeon__name accordeon__internal" hook="internal" title=name}}
          {{#content "title"}}<span>{{{name}}}</span>{{/content}}
        {{/mixin}}
      {{else}}
        <span class="accordeon__name">{{{name}}}</span>
      {{/if}}
    {{else}}
      {{#mixin "gp-boilerplate-documentation/modules/elements/link" this class="accordeon__name accordeon__internal" hook="internal" title=name}}
        {{#content "title"}}<span>{{{name}}}</span>{{/content}}
      {{/mixin}}
    {{/if}}
    {{#if list.length}}
      <span class="accordeon__toggle" data-hook="accordeonToggle"></span>
    {{/if}}
    {{#if url}}
      {{#mixin "gp-boilerplate-documentation/modules/elements/link" this class="accordeon__external" target="_blank"}}
        {{#content "title"}}<span>ext.</span>{{/content}}
      {{/mixin}}
    {{/if}}
  </div>

  {{#if list.length}}
    <div class="accordeon__content">
    {{#each list}}
      {{{mixin "gp-boilerplate-documentation/modules/elements/accordeon" this parent-id=path}}}
    {{/each}}
    </div>
  {{/if}}

</div>
